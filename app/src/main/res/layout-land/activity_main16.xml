<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity16">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="153dp"
        android:layout_height="158dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orange" />

    <CheckBox
        android:id="@+id/checkBoxOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"

        android:layout_marginTop="41dp"
        android:text="@string/q10_op1"
        app:layout_constraintStart_toEndOf="@+id/imageView25"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxHen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"

        android:text="@string/q10_op2"
        app:layout_constraintStart_toEndOf="@+id/imageView25"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxMonkey" />

    <CheckBox
        android:id="@+id/checkBoxMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"

        android:text="@string/q10_op3"
        app:layout_constraintStart_toEndOf="@+id/imageView25"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxOrange" />

    <CheckBox
        android:id="@+id/checkBoxSparrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:text="@string/q7_op1"
        app:layout_constraintStart_toEndOf="@+id/imageView29"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_Glass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"

        android:text="@string/q7_op2"
        app:layout_constraintStart_toEndOf="@+id/imageView29"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSparrow" />

    <CheckBox
        android:id="@+id/checkBox_Owl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"

        android:text="@string/q7_op3"
        app:layout_constraintStart_toEndOf="@+id/imageView29"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Glass" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="148dp"
        android:layout_height="150dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toEndOf="@+id/checkBoxMonkey"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sparrow" />

    <Button
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="276dp"
        android:onClick="moveForward"
        android:text="@string/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_Owl" />

    <Button
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="234dp"
        android:layout_marginTop="68dp"
        android:onClick="movePrev"
        android:text="@string/btn2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />


</androidx.constraintlayout.widget.ConstraintLayout>
